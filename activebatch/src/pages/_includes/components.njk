{% macro quote(quote = {}) %}
<blockquote class="[ w-100 ][ position-relative ][ text-center ][ bg-dark @hover:bg-primary ][ rounded-4 ][ m-0 p-4 p-lg-5 p-xl-7 ][ d-flex justify-content-around align-items-center gap-6 ]">
    <div class="[ text-white ][ d-grid gap-6 ]">
        <q class="[ d-block ][ h3 fw-normal lh-base ]">{{ quote.quote }}</q>
        <cite class="[ fst-normal fw-light h4 ]">
            <img class="" aria-hidden="true" style="width: 8em; mix-blend-mode: screen; filter: brightness(10) saturate(0)" src="{{ quote.logo }}" alt="">
            <a href="{{ quote.link.url }}" class="[ stretched-link ]">
                <span class="[ sr-only ]">{{ quote.link.text }}</span> 
            </a>
        </cite>
    </div>
</blockquote>
{% endmacro %}

